@model RssReader.Models.RssChannel

@{
    ViewBag.Title = "Feed Result";
}

@if (Model != null)
{
	<h2>@(Model?.Title ?? "")</h2>
	<p>Feed from @(Model?.Description ?? ""):</p>
	<table id="feedTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Publication Date</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var feed in Model.Feeds)
			{
				<tr>
					<td><a class="btn btn-info" href="@feed.Link" target="_blank">Go to feed</a></td>
					<td>@feed.Title</td>
					<td>@feed.PubDate</td>
				</tr>
			}
		</tbody>
	</table>
}

<script>
	$(document).ready(function () {
		$('#feedTable').DataTable();
	});
</script>